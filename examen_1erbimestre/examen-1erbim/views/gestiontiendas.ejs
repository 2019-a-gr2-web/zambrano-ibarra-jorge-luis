<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form action="/examen/buscarTienda" method="POST">

                <div class="mt-5 d-flex justify-content-center">
                    <div class="row">
                        <div class="col-md-9">
                            <div class="form-group">
                                <label for="busquedaTiendas">BÃºsqueda</label>
                                <input class="form-control" id="busquedaTiendas" name="busquedaTiendas" type="text">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="d-flex justify-content-center">
                                <button type="submit" class=" mt-4 btn btn-primary" >Buscar</button>
                            </div>
                            <div class="mt-3 d-flex justify-content-center">
                                <a href="/examen/crearTienda">
                                    <button type="button" class="btn btn-primary" >Crear</button>
                                </a>
                            </div>
                        </div>
                    </div>


                </div>
            </form>
        </div>



    </div>
    <div class="row mt-5">
        <div class="col-md-12">
            <table class="ml-5">
                <tr>
                    <th>Nombre</th>
                    <th>Direccion</th>
                    <th>Fecha Apertura</th>
                    <th>RUC</th>
                    <th>Matriz</th>
                    <th>Acciones</th>
                </tr>
                <% arregloTiendas.forEach((tienda)=>{ %>
                    <tr>
                        <td> <%= tienda.nombre %> </td>
                        <td> <%= tienda.direccion %> </td>
                        <td> <%= tienda.fechaApertura %> </td>
                        <td> <%= tienda.RUC %> </td>
                        <td> <%= tienda.matriz %> </td>
                        <td>
                            <a href="/examen/tienda/gestionarProductos/<%=tienda.id%>">
                            <button>Gestionar Hijos</button>
                            </a>
                            <form action="/examen/eliminar" method="post">
                                <input id="id" name="id" type="number" value="<%= tienda.id %>"  hidden >
                                <button>Borrar</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </table>
        </div>
    </div>
</div>


